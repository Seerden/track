{
	"compilerOptions": {
		"module": "ESNext",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"target": "ES2021",
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "dist",
		"jsx": "react-jsx",
		"lib": ["ES2021"],
		"skipLibCheck": true,
		"strictNullChecks": true,
		"emitDecoratorMetadata": true,
		"resolveJsonModule": true,
		"experimentalDecorators": true,
		"baseUrl": "../",
		"rootDir": "../",
		"types": ["node", "vitest/globals"],
		"noImplicitAny": true,
		"paths": {
			"@/*": ["server/src/*"],
			"@lib/*": ["server/src/lib/*"],
			"@shared/*": ["shared/src/*"],
			"types/*": ["server/types/*"]
		},
		"composite": true,
		"inlineSources": true
	},
	"references": [{ "path": "../shared" }],
	"exclude": ["./node_modules", "node_modules", "public"],
	"include": [
		"../server/src",
		"../server/types",
		"../shared",
		"types",
		"../server/tsconfig.json"
	]
}
