{
  "compilerOptions": {
    "target": "ES2021" ,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "declaration": true,
    "declarationMap": true,
    "lib": ["ES2021"],
    "types": [
      "vitest/globals",
      "node"
    ],
    "sourceMap": true,
    "rootDir": "./src" ,
    "baseUrl": "./src" ,
    "jsx": "react-jsx",
    "esModuleInterop": true ,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true ,
    "noEmit": false,
    "skipLibCheck": true, 
    "noImplicitAny": true,
    "outDir": "./dist", 
    "composite": true,
    "paths": {
      "@shared/*": ["./*"],
      "@lib/*": ["lib/*"],
      "@types/*": ["types/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
